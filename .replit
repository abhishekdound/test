
modules = ["nodejs-20", "web", "bash"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Start Full Stack Application"

[[workflows.workflow]]
name = "Start Full Stack"
author = 46393747
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Backend && mvn spring-boot:run -Dspring-boot.run.arguments=\"--server.address=0.0.0.0 --server.port=8080\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Frontend && npm run dev -- --hostname 0.0.0.0 --port 3000"

