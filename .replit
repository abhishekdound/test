modules = ["java-graalvm22.3", "nodejs-20", "bash", "web"]
run = "node index.js"

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Start Application"

[[workflows.workflow]]
name = "Start Full Stack"
author = 46393747
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Backend && chmod +x ./mvnw && ./mvnw spring-boot:run -Dspring-boot.run.arguments=\"--server.address=0.0.0.0 --server.port=8080\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Frontend && npm run dev -- --hostname 0.0.0.0 --port 3000"

[[workflows.workflow]]
name = "Frontend Only"
author = 46393747
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Frontend && npm install && npm run dev -- --hostname 0.0.0.0 --port 3000"

[[workflows.workflow]]
name = "Frontend Only Dev"
author = 46393747
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Frontend && npm run dev -- --hostname 0.0.0.0 --port 3000"

[[workflows.workflow]]
name = "Start Full Stack Fixed"
author = 46395041
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Backend && chmod +x ./mvnw && ./mvnw clean compile spring-boot:run -Dspring-boot.run.arguments=\"--server.address=0.0.0.0 --server.port=8080\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Frontend && npm run dev -- --hostname 0.0.0.0 --port 3000"

[[workflows.workflow]]
name = "Start Application"
author = 46395041
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Backend && chmod +x ./mvnw && ./mvnw clean compile spring-boot:run -Dspring-boot.run.arguments=\"--server.address=0.0.0.0 --server.port=8080\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Frontend && npm run dev -- --hostname 0.0.0.0 --port 3000"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
run = ["sh", "-c", "node index.js"]
